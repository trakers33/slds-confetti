<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>51.0</apiVersion>
    <description>Slds Confetti</description>
    <masterLabel>Slds Confetti</masterLabel>
    <isExposed>true</isExposed>
    <targets>
        <target>lightning__RecordPage</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__RecordPage">
            <property type="Boolean" name="isProduction" label="Is Production ?"/>
            <property type="String" name="fieldName" label="Field Name"/>
            <property type="String" name="fieldValue" label="Value"/>
            <property type="String" name="confettiMode" label="Confetti Mode" datasource="default,schoolPride,firework" description="default: uses default confetti, schoolPride: uses School style confetti, firework: uses big firework confetti."/>
            <property type="Boolean" name="isPlatformEventEnabled" label="Is Platform Event listener Enabled ?"/>
            <property type="String"  name="channelFilter" label="Channel Filter" description="Value to compare with  Confetti__e.Channel__c"/>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>
